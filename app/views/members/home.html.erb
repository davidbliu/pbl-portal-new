	color:black;
	text-align:center;
	padding-bottom:5px;
	border-bottom:1px solid rgba(0,0,0,0.1);
}
.post-div{
	border:1px solid rgba(0,0,0,0.1);
	margin:10px;	
	background-color: rgba(247, 247, 247, 0.85);
  padding: 10px;
