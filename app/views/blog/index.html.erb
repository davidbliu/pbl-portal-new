<style type = 'text/css'>
body{
	color:black;
}

.post-div{
	padding:20px;
	border:1px solid rgba(0,0,0,0.1);
	margin:10px;
	background-color:white;
	width:30%;
	float: left;
	height:399px;
	overflow:hidden;
}
.content-div{
	/*height:200px;*/
	/*overflow:hidden;*/
}
.meta-div{
	font-size:10px;
	color:black;

}
#top-spacer{
	clear:both;
	display:inline-block;
	height:50px;
}
#blog-search{
	text-align:center;
	padding:8px;
	width:50%;
}
#blog-search:focus{
  border-color: rgba(185, 43, 39, 0.4);
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(185, 43, 39, 0.3);
